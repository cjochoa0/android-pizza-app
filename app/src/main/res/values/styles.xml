<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/secondaryLightColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:windowBackground">@color/secondaryLighterColor</item>
    </style>
    <!-- TODO: RadioButton. -->
    <style name="AppTheme.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/secondaryLightColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_marginBottom">@dimen/space_mid</item>
    </style>

    <style name="TextAppearance.Ingredients.Title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/lobster</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">28dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

</resources>
